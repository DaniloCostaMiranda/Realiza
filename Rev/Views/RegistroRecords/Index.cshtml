@{
    ViewData["Title"] = "Busca de registros";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="from-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Pesquisa simples</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <form class="from-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Pesquisa por empresa</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <form class="from-horizontal" asp-action="GroupingTipoDespesaSearch">
            <fieldset>
                <legend>Pesquisa por tipo de despesa</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

