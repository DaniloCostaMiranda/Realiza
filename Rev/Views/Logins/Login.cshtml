@model Usuario

<form asp-action="Login" asp-controller="Logins" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">

                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 asp-controller="Logins" asp-action="Login" class="card-title mt-2">Login</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-sucess">@TempData["MSG_S"]</p>
                                }
                           
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Senha">Senha</label>
                                        <input type="text" asp-for="Senha" class="form-control" placeholder="Senha">
                                        <span asp-validation-for="Senha"></span>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Entrar </button>
                                </div> <!-- form-group// -->
                                <small class="text-muted">
                                    Cadastrando vc concorda com a política de termos e uso da empresa. <br> Politica de termos.
                                </small>

                            </article> <!-- card-body end .// -->
                            <div class="border-top card-body text-center">Ja tem cadastro! <a href=""> Entrar</a></div>
                        </div> <!-- card.// -->

                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>



        <hr class="featurette-divider">


    </main>

</form>