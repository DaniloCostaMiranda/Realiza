@model IEnumerable<Rev.Models.Tipo>
@{ 
    ViewData["Title"] = "Tipo De Despesas";
}
<h2>@ViewData["Title"]</h2>

<br />
<hr />

<p>Despesas cadastradas:</p>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Criar Novo Tipo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>



