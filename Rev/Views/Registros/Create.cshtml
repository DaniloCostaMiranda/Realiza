@model Rev.Models.ViewModels.RegistroViewModel
@{
    ViewData["Title"] = "Adicionar Registro";
}

<h2>@ViewData["Title"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Registro.DepartmentId" class="control-label"></label>
                <select asp-for="Registro.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Nome"))" class="form-control"></select>
                <span asp-validation-for="Registro.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Valor" class="control-label"></label>
                <input asp-for="Registro.Valor" class="form-control" />
                <span asp-validation-for="Registro.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Descrição" class="control-label"></label>
                <input asp-for="Registro.Descrição" class="form-control" />
                <span asp-validation-for="Registro.Descrição" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Data" class="control-label"></label>
                <input asp-for="Registro.Data" class="form-control" />
                <span asp-validation-for="Registro.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.TipoId" class="control-label"></label>
                <select asp-for="Registro.TipoId" asp-items="@(new SelectList(Model.Tipos,"Id","Nome"))" class="form-control"></select>
                <span asp-validation-for="Registro.TipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Operacao" class="control-label"></label>
                <input asp-for="Registro.Operacao" class="form-control" />
                <span asp-validation-for="Registro.Operacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registro.Fonte" class="control-label"></label>
                <input asp-for="Registro.Fonte" class="form-control" />
                <span asp-validation-for="Registro.Fonte" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input class="btn btn-outline-success" type="submit" value="Adicionar" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
